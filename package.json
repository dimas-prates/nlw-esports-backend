{
  "name": "nlw-esports-backend",
  "version": "1.0.0",
  "description": "Next Level Week app ESports theme",
  "main": "build/server.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:dimas-prates/nlw-esports-backend.git"
  },
  "private": true,
  "author": "Dimas Prates",
  "license": "MIT",
  "engines": {
    "node": "^14.19.x || ^16.x.x"
  },
  "dependencies": {
    "@prisma/client": "4.3.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^6.0.0",
    "morgan": "^1.10.0",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.2",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.17",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "autocannon": "^7.9.0",
    "commitizen": "^4.2.5",
    "commitlint-config-gitmoji": "^2.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.23.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "prisma": "^4.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.3"
  },
  "scripts": {
    "dev": "ts-node-dev --transpile-only --respawn ./src/server.ts",
    "prebuild": "rimraf ./build",
    "build": "yarn prebuild && tsc",
    "start": "node ./build/server.js",
    "test:perf": "autocannon -c 500 -d 30 --workers 10 --renderStatusCodes --latency --warmup [-c 1 -d 2]",
    "test:audit": "audit",
    "test": "jest",
    "lint": "eslint ./src/",
    "lint:fix": "eslint --fix ./src/",
    "migrate:generate": "prisma migrate dev"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "types": {
        ":sparkles: feat": {
          "description": "A new feature"
        },
        ":adhesive_bandage: fix": {
          "description": "A bug fix"
        },
        ":memo: docs": {
          "description": "Documentation only changes"
        },
        ":pencil2: style": {
          "description": "Changes that do not affect the meaning of the code (white-space, formatting, missing semi-colons, etc)"
        },
        ":recycle: refactor": {
          "description": "A code change that neither fixes a bug nor adds a feature"
        },
        ":zap: perf": {
          "description": "A code change that improves performance"
        },
        ":test_tube: test": {
          "description": "Adding missing tests or correcting existing tests"
        },
        ":package: build": {
          "description": "Changes that affect the build system or external dependencies (example scopes: gulp, broccoli, npm)"
        },
        ":bricks: ci": {
          "description": "Changes to our CI configuration files and scripts (example scopes: Travis, Circle, BrowserStack, SauceLabs)"
        },
        ":wrench: chore": {
          "description": "Other changes that don't modify src or test files"
        },
        ":rewind: revert": {
          "description": "Reverts a previous commit"
        }
      }
    }
  }
}